<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/calButton</item>
        <item name="colorPrimaryDark">@color/calBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomButton" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/rippleeffect</item>

    </style>

</resources>
